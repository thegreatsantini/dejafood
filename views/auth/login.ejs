<form method="POST" action="/auth/login">
  <div id='modal1' class="form-group">
    <label>Email</label>
    <input type="email" name="email" class="form-control" placeholder="johnny@appleseed.com">
  </div>
  <div class="form-group">
    <label>Password</label>
    <input type="password" name="password" class="form-control" placeholder="Password">
  </div>
  <input type="submit" value="Login" class="btn btn-success modal-action modal-close waves-effect waves-green btn-flat">
</form>